<%= form_for @url, url: urls_create_path do |f| %>
    <div class="field" style="margin-top: 30px">
      <%= f.label :url %>
      <%= f.text_field :url, size: "50x5"%>
    </div>


    <div class="actions"><br>
      <%= f.submit class: "btn btn-primary", style: "text-align: center; font-family: Menlo"%> <br>
    </div>

    <div>
      <h2 style="text-align: center">Shortened URLs</h2> <br>
      <% @urls.each do |u| %>
        <% if Rails.env.production? %>
          <p><a href="https://frozen-coast-65714.herokuapp.com/urls/show/<%=u.id%>">https://frozen-coast-65714.herokuapp.com/urls/show/<%=u.id%></a></p>
        <% else %>
          <p><a href="http://localhost:3000/urls/show/<%=u.id%>">http://localhost:3000/urls/show/<%=u.id%></a></p>
          <%end%>
        <%end%>
    </div>

<% end %>
